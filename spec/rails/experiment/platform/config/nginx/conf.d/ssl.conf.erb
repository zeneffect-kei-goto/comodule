#
# HTTPS server configuration
#

server {
    listen       443;
    server_name  <%= config.uri %>;

    ssl                  on;
    ssl_certificate      /etc/nginx/zeneffect.co.jp.pem;
    ssl_certificate_key  /etc/nginx/zeneffect.co.jp.key;

    ssl_session_timeout  5m;

    ssl_protocols  SSLv2 SSLv3 TLSv1;
    ssl_ciphers  ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv2:+EXP;
    ssl_prefer_server_ciphers   on;

    root <%= config.rails_root %>/public;
    access_log <%= config.rails_root %>/log/nginx-access.log;
    error_log  <%= config.rails_root %>/log/nginx-error.log;

    # For health check by ELB
    location = /webservers_health {
        return 444;
    }
    # location = /backends_health {
    #     rewrite ^ /system_status;
    # }

    location = /robots.txt {
        expires max;
    }

    location ^~ /assets/  {
        expires max;
    }

    location ^~ /(404|422|500).html$ {
        internal;
    }

    # location ~* \.(ico|css|js|gif|jpe?g|png|svg)$ {
    # }

    location / {
        proxy_set_header X-Real-IP  $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        # THe proxy_buffering must be off. Otherwise a downloaded Excel file is broken.
        proxy_buffering off;
        proxy_connect_timeout 480;
        proxy_read_timeout    480;
        proxy_send_timeout    480;
        proxy_pass http://sky;
    }

    error_page  404    /404.html;
    error_page  422    /422.html;
    error_page  500    /500.html;

    error_page  502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
